<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="SetupConfigurator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#AE0000</item>
        <item name="colorPrimaryVariant">#7A0000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF6767</item>
        <item name="colorSecondaryVariant">#8C4444</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ScrollView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:scrollbarThumbVertical">@color/red</item>
        <item name="android:scrollbarTrackVertical">@color/backgroundScroll</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="LinearView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="ImageViewBackground" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:alpha">0.3</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/mercedes_amg_gt3_evo</item>
    </style>

    <style name="ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorControlActivated">#FF0000</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:progress">25</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">0</item>
    </style>

    <style name="PrimaryTitleTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/red</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="PrimaryTitleView">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="SecondTitleTextView" >
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SecondTitleView">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ThirdTitleTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ViewArrowBack">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/arrow_back</item>
    </style>

    <style name="ViewArrowForward">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/arrow_forward</item>
    </style>

</resources>